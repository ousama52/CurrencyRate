@model MyProject.Controllers.Model.CurrencyDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Currency</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .back-button {
            display: inline-block;
            margin: 20px 0;
            padding: 10px 20px;
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            border-radius: 4px;
            text-decoration: none;
            color: #333;
            font-weight: bold;
        }

            .back-button:hover {
                background-color: #e0e0e0;
            }

        .form-container {
            max-width: 600px;
            margin: 0 auto;
        }

            .form-container form {
                display: flex;
                flex-direction: column;
            }

            .form-container label {
                margin: 10px 0 5px;
            }

            .form-container input[type="text"],
            .form-container input[type="number"] {
                padding: 10px;
                margin-bottom: 20px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            .form-container input[type="submit"] {
                padding: 10px 20px;
                background-color: #4CAF50;
                border: none;
                border-radius: 4px;
                color: white;
                font-weight: bold;
                cursor: pointer;
            }

                .form-container input[type="submit"]:hover {
                    background-color: #45a049;
                }
    </style>
</head>
<body>
    <a href="@Url.Action("Index", "Home")" class="back-button">Back</a>
    <div class="form-container">
        <h1>Create Currency</h1>
        <form asp-action="CreateCurrency" method="post">
            <label for="CurrencyN">Currency Name:</label>
            <input type="text" id="CurrencyN" name="CurrencyN" required>

            <label for="Exchangerate">Exchange Rate:</label>
            <input type="number" id="Exchangerate" name="Exchangerate" step="0.01" required>

            <input type="submit" value="Create">
        </form>
    </div>
</body>
</html>
